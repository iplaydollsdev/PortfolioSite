<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PortfolioSite</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PortfolioSite.styles.css" asp-append-version="true" />
</head>
<body>
    <header>

    </header>
    <nav class="navbar">
        <ul>
            <li><img src="logo.png" alt="LOGO" style="width:100%; height:100%;"></li>
            <li><a class="btn" asp-area="" asp-page="/Index">Резюме</a></li>
            <li><a class="btn" asp-area="" asp-page="/Works">Примеры работ</a></li>
            <li><a class="btn" asp-area="" asp-page="/Store">Пример сайта</a></li>
        </ul>
        <footer class="footer text-muted">
            &copy; 2023 - IPlayDollsDev
        </footer>
    </nav>
    <div class="content">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>



    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>