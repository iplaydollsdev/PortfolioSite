<nav class="navbar navbar-expand-md navbar-dark bg-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">OnlineStoreExample</a>
        <button class="navbar-toggler @NavButtonCssClass" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse"
                aria-controls="navbarCollapse" aria-label="Toggle navigation" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse @NavBarCssClass" id="navbarCollapse" @onclick="ToggleNavMenu">
            <ul class="navbar-nav me-auto mb-2 mb-md-0">
                <li class="nav-item">
                    <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                        <span class="oi oi-home" aria-hidden="true"></span> Каталог
                    </NavLink>
                </li>

                <AuthorizeView Policy="OwnerPolicy">
                <li class="nav-item">
                    <NavLink class="nav-link" href="ownerpage">
                            <span class="oi oi-plus" aria-hidden="true"></span> Царская страница
                    </NavLink>
                </li>
                </AuthorizeView>
                <AuthorizeView Policy="OwnerPolicy">
                    <li class="nav-item">
                        <NavLink class="nav-link" href="test">
                            <span class="oi oi-plus" aria-hidden="true"></span> Тесты
                        </NavLink>
                    </li>
                </AuthorizeView>
                
                <AuthorizeView Policy="AdminPolicy">
                <li class="nav-item">
                        <NavLink class="nav-link" href="adminpage">
                        <span class="oi oi-list-rich" aria-hidden="true"></span> Админка
                    </NavLink>
                </li>
                </AuthorizeView>
            </ul>
            <ul class="navbar-nav ms-auto mb-2 mb-md-0">
                <LoginDisplay />
            </ul>
        </div>
    </div>
</nav>
@code {
    private bool collapseNavMenu = true;
    private string? NavBarCssClass => collapseNavMenu ? null : "show";
    private string? NavButtonCssClass => collapseNavMenu ? "collapsed" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
